# This is shown by the build function under
# ImperialCalculator class
<MainWidget>:
    cols: 1
    rows: 3
    padding: 5

    clear_button: clear_btn

    TextInput:
        text: root.text
        size_hint_y: .1
        disabled: True
    Button:
        id: clear_btn
        text: 'Clear'
        size_hint_y: .1
        on_press: root.btn_pressed('c')

    GridLayout:
        cols: 2
        rows: 1

        # Grid for inches
        GridLayout:
            cols: 1
            rows: 2

            GridLayout:
                cols: 3
                rows: 4
                Button:
                    text: '1'
                    on_press: root.btn_pressed(1)
                Button:
                    text: '2'
                    on_press: root.btn_pressed(2)
                Button:
                    text: '3'
                    on_press: root.btn_pressed(3)
                Button:
                    text: '4'
                    on_press: root.btn_pressed(4)
                Button:
                    text: '5'
                    on_press: root.btn_pressed(5)
                Button:
                    text: '6'
                    on_press: root.btn_pressed(6)
                Button:
                    text: '7'
                    on_press: root.btn_pressed(7)
                Button:
                    text: '8'
                    on_press: root.btn_pressed(8)
                Button:
                    text: '9'
                    on_press: root.btn_pressed(9)
                Button:
                    text: '-'
                    visible: False
                    disabled: not self.visible
                    opacity: 0
                Button:
                    text: '0'
                    on_press: root.btn_pressed(0)
                Button:
                    text: '-'
                    visible: False
                    disabled: not self.visible
                    opacity: 0

            GridLayout:
                cols: 1
                rows: 3

                Button:
                    text: '+'
                    on_press: root.btn_pressed('+')
                Button:
                    text: '-'
                    on_press: root.btn_pressed('-')
                Button:
                    text: '='
                    on_press: root.btn_pressed('=')

        # Grid for fractions
        GridLayout:
            cols: 2
            rows: 8

            Button:
                text: '1/16'
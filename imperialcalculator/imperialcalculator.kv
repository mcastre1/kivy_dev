# This is shown by the build function under
# ImperialCalculator class
<MainWidget>:
    cols: 1
    rows: 3
    padding: 5

    clear_button: clear_btn

    TextInput:
        text: root.text
        size_hint_y: .1
        disabled: True

    GridLayout:
        cols: 2
        rows: 1
        size_hint_y: .1

        Button:
            id: clear_btn
            text: 'Clear'
            background_color: 0.65, 0.15, 0.15, 1
            on_press: root.btn_pressed('c')

        Button:
            id: backspace
            text: 'Back'
            background_color: root.backspace_bg
            on_press: root.backspace()

    GridLayout:
        cols: 2
        rows: 1

        # Grid for inches
        GridLayout:
            cols: 1
            rows: 2

            GridLayout:
                cols: 3
                rows: 4
                Button:
                    text: '1'
                    background_color: root.operand_bg
                    on_press: root.btn_pressed('1')
                Button:
                    text: '2'
                    background_color: root.operand_bg
                    on_press: root.btn_pressed('2')
                Button:
                    text: '3'
                    background_color: root.operand_bg
                    on_press: root.btn_pressed('3')
                Button:
                    text: '4'
                    background_color: root.operand_bg
                    on_press: root.btn_pressed('4')
                Button:
                    text: '5'
                    background_color: root.operand_bg
                    on_press: root.btn_pressed('5')
                Button:
                    text: '6'
                    background_color: root.operand_bg
                    on_press: root.btn_pressed('6')
                Button:
                    text: '7'
                    background_color: root.operand_bg
                    on_press: root.btn_pressed('7')
                Button:
                    text: '8'
                    background_color: root.operand_bg
                    on_press: root.btn_pressed('8')
                Button:
                    text: '9'
                    background_color: root.operand_bg
                    on_press: root.btn_pressed('9')
                Button:
                    text: '-'
                    visible: False
                    disabled: not self.visible
                    opacity: 0
                Button:
                    text: '0'
                    background_color: root.operand_bg
                    on_press: root.btn_pressed('0')
                Button:
                    text: '-'
                    visible: False
                    disabled: not self.visible
                    opacity: 0

            GridLayout:
                cols: 1
                rows: 5

                Button:
                    text: '+'
                    background_color: 0.1, 0.5, 0.6, 1
                    on_press: root.btn_pressed('+')
                Button:
                    text: '-'
                    background_color: 0.1, 0.5, 0.6, 1
                    on_press: root.btn_pressed('-')
                Button:
                    text: '/'
                    background_color: 0.1, 0.5, 0.6, 1
                    on_press: root.btn_pressed('/')
                Button:
                    text: '*'
                    background_color: 0.1, 0.5, 0.6, 1
                    on_press: root.btn_pressed('*')
                Button:
                    text: '='
                    background_color: root.equal_bg
                    on_press: root.btn_pressed('=')

        # Grid for fractions
        GridLayout:
            cols: 2
            rows: 8
            size_hint: (0.5,1)

            Button:
                text: '1/16'
                background_color: 0.67, 0.47, 0.23, 1
                on_press : root.btn_pressed('1/16')
            Button:
                text: '1/8'
                background_color: 0.67, 0.47, 0.23, 1
                on_press : root.btn_pressed('1/8')
            Button:
                text: '3/16'
                background_color: 0.67, 0.47, 0.23, 1
                on_press : root.btn_pressed('3/16')
            Button:
                text: '1/4'
                background_color: 0.67, 0.47, 0.23, 1
                on_press : root.btn_pressed('1/4')
            Button:
                text: '5/16'
                background_color: 0.67, 0.47, 0.23, 1
                on_press : root.btn_pressed('5/16')
            Button:
                text: '3/8'
                background_color: 0.67, 0.47, 0.23, 1
                on_press : root.btn_pressed('3/8')
            Button:
                text: '7/16'
                background_color: 0.67, 0.47, 0.23, 1
                on_press : root.btn_pressed('7/16')
            Button:
                text: '1/2'
                background_color: 0.67, 0.47, 0.23, 1
                on_press : root.btn_pressed('1/2')
            Button:
                text: '9/16'
                background_color: 0.67, 0.47, 0.23, 1
                on_press : root.btn_pressed('9/16')
            Button:
                text: '5/8'
                background_color: 0.67, 0.47, 0.23, 1
                on_press : root.btn_pressed('5/8')
            Button:
                text: '11/16'
                background_color: 0.67, 0.47, 0.23, 1
                on_press : root.btn_pressed('11/16')
            Button:
                text: '3/4'
                background_color: 0.67, 0.47, 0.23, 1
                on_press : root.btn_pressed('3/4')
            Button:
                text: '13/16'
                background_color: 0.67, 0.47, 0.23, 1
                on_press : root.btn_pressed('13/16')
            Button:
                text: '7/8'
                background_color: 0.67, 0.47, 0.23, 1
                on_press : root.btn_pressed('7/8')
            Button:
                text: '15/16'
                background_color: 0.67, 0.47, 0.23, 1
                on_press : root.btn_pressed('15/16')